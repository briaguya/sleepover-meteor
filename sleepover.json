{
	"application": {
		"title": "sleepover",
		"theme": "bootswatch-flatly",
		"collections": [
			{
				"name": "customers",
				"fields": [
					{
						"name": "name",
						"title": "Name",
						"required": true,
						"exportable": true,
						"type": "string"
					},
					{
						"name": "phone",
						"title": "Phone",
						"default": "-",
						"exportable": true,
						"type": "string"
					},
					{
						"name": "email",
						"title": "E-mail",
						"type": "email",
						"exportable": true
					},
					{
						"name": "note",
						"title": "Note",
						"input": "textarea",
						"exportable": true,
						"type": "string"
					},
					{
						"name": "active",
						"title": "Active",
						"type": "bool",
						"input": "checkbox",
						"display_helper": "booleanToYesNo",
						"exportable": true
					}
				],
				"type": "collection"
			}
		],
		"queries": [
			{
				"name": "customers",
				"collection": "customers"
			},
			{
				"name": "customers_empty",
				"collection": "customers",
				"filter": {
					"_id": null
				},
				"find_one": true
			},
			{
				"name": "customer",
				"collection": "customers",
				"filter": {
					"_id": ":customerId"
				},
				"find_one": true
			},
			{
				"name": "current_user_data",
				"collection": "users",
				"filter": {
					"_id": "Meteor.userId()"
				},
				"find_one": true
			}
		],
		"public_zone": {
			"navbar_class": "navbar-inverse navbar-fixed-top",
			"pages": [
				{
					"name": "home_public",
					"components": [
						{
							"name": "home_jumbotron",
							"title": "Example application",
							"type": "jumbotron",
							"text": "Home",
							"button_title": "Continue &raquo;",
							"button_route": "login"
						}
					],
					"type": "page"
				},
				{
					"name": "login",
					"template": "login",
					"type": "page"
				},
				{
					"name": "register",
					"template": "register",
					"type": "page"
				},
				{
					"name": "forgot_password",
					"template": "forgot_password",
					"type": "page"
				},
				{
					"name": "reset_password",
					"template": "reset_password",
					"route_params": [
						"resetPasswordToken"
					],
					"type": "page"
				}
			],
			"components": [
				{
					"name": "left_menu",
					"type": "menu",
					"class": "nav navbar-nav",
					"dest_selector": "#menu",
					"items": [
						{
							"title": "Home",
							"route": "home_public"
						}
					]
				},
				{
					"name": "right_menu",
					"type": "menu",
					"class": "nav navbar-nav navbar-right",
					"dest_selector": "#menu",
					"items": [
						{
							"title": "Register",
							"route": "register"
						},
						{
							"title": "Login",
							"route": "login"
						}
					]
				}
			],
			"type": "zone"
		},
		"private_zone": {
			"navbar_class": "navbar-inverse navbar-fixed-top",
			"components": [
				{
					"name": "left_menu",
					"type": "menu",
					"items": [
						{
							"title": "Home",
							"route": "home_private"
						},
						{
							"title": "Customers",
							"route": "customers"
						}
					],
					"dest_selector": "#menu",
					"class": "nav navbar-nav"
				},
				{
					"name": "right_menu",
					"dest_selector": "#menu",
					"class": "nav navbar-nav navbar-right",
					"type": "menu",
					"items": [
						{
							"title": "{{userEmail}}",
							"items": [
								{
									"title": "Settings",
									"route": "user_settings"
								},
								{
									"title": "Logout",
									"route": "logout"
								}
							]
						}
					]
				}
			],
			"pages": [
				{
					"name": "home_private",
					"title": "Welcome {{userFullName}}!",
					"button_title": "Continue &raquo;",
					"button_route": "customers",
					"type": "page"
				},
				{
					"name": "user_settings",
					"pages": [
						{
							"name": "profile",
							"components": [
								{
									"name": "edit_form",
									"type": "form",
									"mode": "update",
									"title": "Edit your profile",
									"submit_route": "user_settings.profile",
									"query_name": "current_user_data",
									"fields": [
										{
											"name": "profile.name",
											"title": "Name",
											"required": true,
											"type": "string"
										},
										{
											"name": "profile.email",
											"title": "E-mail",
											"type": "email",
											"required": true
										},
										{
											"name": "profile.facebook",
											"title": "Facebook URL",
											"type": "string"
										},
										{
											"name": "profile.google",
											"title": "Google+ URL",
											"type": "string"
										},
										{
											"name": "profile.twitter",
											"title": "Twitter ID",
											"type": "string"
										},
										{
											"name": "profile.website",
											"title": "Website URL",
											"type": "string"
										}
									]
								}
							],
							"type": "page"
						},
						{
							"name": "change_pass",
							"template": "change_pass",
							"type": "page"
						}
					],
					"components": [
						{
							"name": "side_menu",
							"type": "menu",
							"class": "nav nav-stacked nav-pills",
							"items": [
								{
									"title": "Profile",
									"route": "user_settings.profile"
								},
								{
									"title": "Change password",
									"route": "user_settings.change_pass"
								}
							]
						}
					],
					"type": "page"
				},
				{
					"name": "logout",
					"template": "logout",
					"type": "page"
				},
				{
					"name": "customers",
					"components": [
						{
							"name": "view",
							"type": "data_view",
							"title": "Customers",
							"text_if_empty": "No customers :(",
							"query_name": "customers",
							"insert_route": "customers.insert",
							"edit_route": "customers.edit",
							"edit_route_params": [
								{
									"name": "customerId",
									"value": "this._id"
								}
							],
							"details_route": "customers.details",
							"details_route_params": [
								{
									"name": "customerId",
									"value": "this._id"
								}
							]
						}
					],
					"pages": [
						{
							"name": "insert",
							"components": [
								{
									"name": "insert_form",
									"type": "form",
									"mode": "insert",
									"title": "New customer",
									"query_name": "customers_empty",
									"submit_route": "customers",
									"cancel_route": "customers"
								}
							],
							"type": "page"
						},
						{
							"name": "details",
							"route_params": [
								"customerId"
							],
							"components": [
								{
									"name": "details_form",
									"type": "form",
									"mode": "read_only",
									"title": "Details",
									"layout": "horizontal",
									"query_name": "customer",
									"close_route": "customers",
									"back_route": "customers"
								}
							],
							"type": "page"
						},
						{
							"name": "edit",
							"route_params": [
								"customerId"
							],
							"components": [
								{
									"name": "edit_form",
									"type": "form",
									"mode": "update",
									"title": "Edit customer",
									"submit_route": "customers",
									"cancel_route": "customers",
									"query_name": "customer"
								}
							],
							"type": "page"
						}
					],
					"type": "page"
				}
			],
			"type": "zone"
		},
		"login_with_google": true,
		"login_with_linkedin": true,
		"login_with_facebook": true,
		"login_with_twitter": true,
		"packages": {},
		"free_zone": {
			"type": "zone"
		}
	}
}